{
  "name": "sprechende-uhr",
  "version": "0.0.1",
  "description": "Sprechende Uhr",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "semi": [
        "error",
        "always"
      ],
      "curly": "error",
      "eqeqeq": "error",
      "no-eval": "error",
      "no-loop-func": "error",
      "radix": "error",
      "no-undef": "error"
    },
    "globals": {}
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "eslint": "^2.11.1",
    "eslint-plugin-react": "^5.1.1",
    "grunt": "^1.0.1",
    "grunt-browserify": "^5.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^2.0.0",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-env": "^0.4.4",
    "hex-rgba": "^1.0.0",
    "load-grunt-tasks": "^3.5.0",
    "moment": "^2.14.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "screenfull": "^3.0.0",
    "uglifyify": "^3.0.2"
  },
  "devDependencies": {
    "cordova": "^6.3.0"
  }
}
