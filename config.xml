<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="103" id="ch.alexi.zyt" ios-CFBundleVersion="103" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Zyt</name>
    <description>
        A "talking" Clock - Shows the actual time as spoken in words
    </description>
    <author email="alex@alexi.ch" href="https://alexi.ch/">
        Alexander Schenkel
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="assets/android-icons/icon-android-36.png" />
        <icon density="mdpi" src="assets/android-icons/icon-android-48.png" />
        <icon density="hdpi" src="assets/android-icons/icon-android-72.png" />
        <icon density="xhdpi" src="assets/android-icons/icon-android-96.png" />
        <icon density="xxhdpi" src="assets/android-icons/icon-android-144.png" />
        <icon density="xxxhdpi" src="assets/android-icons/icon-android-192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="Orientation" value="all" />
        <icon height="180" src="assets/ios-icons/icon-ios-180.png" width="180" />
        <icon height="60" src="assets/ios-icons/icon-ios-60.png" width="60" />
        <icon height="120" src="assets/ios-icons/icon-ios-120.png" width="120" />
        <icon height="76" src="assets/ios-icons/icon-ios-76.png" width="76" />
        <icon height="152" src="assets/ios-icons/icon-ios-152.png" width="152" />
        <icon height="40" src="assets/ios-icons/icon-ios-40.png" width="40" />
        <icon height="80" src="assets/ios-icons/icon-ios-80.png" width="80" />
        <icon height="57" src="assets/ios-icons/icon-ios-57.png" width="57" />
        <icon height="114" src="assets/ios-icons/icon-ios-114.png" width="114" />
        <icon height="72" src="assets/ios-icons/icon-ios-72.png" width="72" />
        <icon height="144" src="assets/ios-icons/icon-ios-144.png" width="144" />
        <icon height="29" src="assets/ios-icons/icon-ios-29.png" width="29" />
        <icon height="58" src="assets/ios-icons/icon-ios-58.png" width="58" />
        <icon height="50" src="assets/ios-icons/icon-ios-50.png" width="50" />
        <icon height="100" src="assets/ios-icons/icon-ios-100.png" width="100" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="assets/ios-icons/splash-320x480.png" width="320" height="480"/>
        <splash src="assets/ios-icons/splash-640x960.png" width="640" height="960"/>
        <splash src="assets/ios-icons/splash-768x1024.png" width="768" height="1024"/>
        <splash src="assets/ios-icons/splash-1536x2048.png" width="1536" height="2048"/>
        <splash src="assets/ios-icons/splash-1024x768.png" width="1024" height="768"/>
        <splash src="assets/ios-icons/splash-2048x1536.png" width="2048" height="1536"/>
        <splash src="assets/ios-icons/splash-640x1136.png" width="640" height="1136"/>
        <splash src="assets/ios-icons/splash-750x1334.png" width="750" height="1334"/>
        <splash src="assets/ios-icons/splash-1242x2208.png" width="1242" height="2208"/>
        <splash src="assets/ios-icons/splash-2208x1242.png" width="2208" height="1242"/>
    </platform>
    <engine name="android" spec="~5.2.1" />
    <plugin name="cordova-plugin-insomnia" spec="https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.3" />
</widget>
