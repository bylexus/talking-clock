        <splash height="1024" src="assets/ios-icons/splash-768x1024.png" width="768" />
        <splash height="2048" src="assets/ios-icons/splash-1536x2048.png" width="1536" />
        <splash height="768" src="assets/ios-icons/splash-1024x768.png" width="1024" />
        <splash height="1536" src="assets/ios-icons/splash-2048x1536.png" width="2048" />
        <splash height="1136" src="assets/ios-icons/splash-640x1136.png" width="640" />
