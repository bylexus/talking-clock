{
    "manifest_version": 2,

    "name": "Zyt - Time",
    "description": "This extension show a stylish time display",
    "version": "1.0",
    "author": "Alexander Schenkel <alex@alexi.ch>",
    "homepage_url": "https://alexi.ch/projects/zyt",

    "icons": {
        "128": "icon-128.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html",
        "default_title": "Zyt - Time"
    },
    "permissions": [
    ],
    "offline_enabled": true
}
